{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "workspaceRelease": {
    "npmRelease": true
  },
  "scripts": {
    "example:dev": "pnpm --filter playground dev",
    "example:build": "pnpm --filter playground build",
    "example:start": "pnpm --filter playground start",
    "dev": "pnpm --stream -r -parallel dev",
    "release": "semantic-release-npm-workspaces-monorepo"
  },
  "devDependencies": {
    "semantic-release-npm-workspaces-monorepo": "^2.2.2"
  }
}