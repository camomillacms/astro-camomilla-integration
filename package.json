{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "workspaceRelease": {
    "npmRelease": true
  },
  "scripts": {
    "lint": "eslint \"{packages,example/src,test}/**/*.{js,mjs,cjs,ts,mts,cts}\" --fix",
    "example:dev": "pnpm --filter playground dev",
    "example:build": "pnpm --filter playground build",
    "example:start": "pnpm --filter playground start",
    "dev": "pnpm --stream -r -parallel dev",
    "lerna": "lerna",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lerna": "^8.2.2",
    "prettier": "3.5.3",
    "typescript-eslint": "^8.33.1"
  },
  "packageManager": "pnpm@10.12.1"
}
