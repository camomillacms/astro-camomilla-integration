---
const { error } = Astro.props
---

<>
  {
    error?.json ? (
      <pre class="scrollable">{JSON.stringify(error.json, null, 2)}</pre>
    ) : (
      <iframe
        srcdoc={error.content}
        style="width:90%;height:600px;border:1px solid #ccc;padding:8px;"
        sandbox="allow-scripts allow-same-origin"
      />
    )
  }
</>
